<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etMaKH"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mã khách hàng"
            android:drawableLeft="@drawable/ic_user_48"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:layout_weight="7"
            />
        <EditText
            android:layout_weight="3"
            android:id="@+id/etMaPIN"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mã pin"
            android:drawableLeft="@drawable/ic_pin"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/etDateStart"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="mm/dd/yyyy"
            android:drawableLeft="@drawable/ic_date_20"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="to"
            android:textColor="#aa9f9c9c"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_weight="4"
            android:id="@+id/etDateEnd"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="mm/dd/yyyy"
            android:drawableLeft="@drawable/ic_date_20"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:gravity="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnCheck"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử giao dịch"
        android:textAllCaps="false"
        android:background="#f20"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <ListView
        android:id="@+id/lvHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></ListView>
</LinearLayout>